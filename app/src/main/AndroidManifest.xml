<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="preyvschaggol.pirates.ideafactory.preyvschaggol" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".DemoFeaturesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name=".NoLandscapeActivity"
            android:label="@string/title_activity_no_landscape" >
        </activity>
        <activity
            android:name=".NoLandscapeNoActionBarActivity"
            android:label="@string/title_activity_no_landscape_no_actionbar" >
        </activity>
        <activity
            android:name=".LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Settings"
            android:label="@string/title_activity_settings"
            android:parentActivityName=".DemoFeaturesActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="preyvschaggol.pirates.ideafactory.preyvschaggol.DemoFeaturesActivity" />
        </activity>
        <activity
            android:name=".ChangePinActivity"
            android:label="@string/title_activity_change_pin"
            android:parentActivityName=".Settings" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="preyvschaggol.pirates.ideafactory.preyvschaggol.Settings" />
        </activity>
        <activity
            android:name=".SignUP"
            android:label="@string/title_activity_sign_up" >
        </activity>
        <activity
            android:name=".FriendDetails"
            android:label="@string/title_activity_friend_details" >
        </activity>
    </application>

</manifest>
